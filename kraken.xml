  <rule id="ruleKraken" scope="public">
    <example>Sarah combien j'ai de bitcoin</example>
    <tag>out.action=new Object(); </tag>
    
    <item>Sarah</item>
    
    <one-of>
		<item>combien j'ai de bitcoin<tag>out.action.a="bitcoincount";</tag></item>
    </one-of>
    
    <tag>out.action._attributes.uri<="http://127.0.0.1:8080/sarah/kraken";</tag>
  </rule> 
</grammar>
